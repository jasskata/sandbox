<AnchorPane prefHeight="480.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MakeCocktailController">
   <children>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="800.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="120.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="310.0" vgrow="SOMETIMES" />
        </rowConstraints>
          <children>
              <HBox spacing="20.0">
                  <Label fx:id="welcome_label" prefWidth="540.0" text="Welcome User">
                  <font>
                     <Font name="System Bold" size="25.0" />
                  </font>
                  <HBox.margin>
                     <Insets top="5.0" />
                  </HBox.margin></Label>
                  <Button fx:id="refill_button" minWidth="100.0" prefWidth="100.0" text="Refill">
                  <font>
                     <Font size="20.0" />
                  </font>
                  <HBox.margin>
                     <Insets left="20.0" />
                  </HBox.margin></Button>
                  <Button fx:id="logOff_button" minWidth="100.0" prefWidth="100.0" text="Log off">
                  <font>
                     <Font size="20.0" />
                  </font></Button>
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
              </HBox>
            <FlowPane fx:id="cocktailGroup_pane" hgap="2.0" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: black;" vgap="2.0" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding></FlowPane>
            <FlowPane fx:id="cocktail_pane" hgap="2.0" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: black;" vgap="2.0" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding></FlowPane>
          </children>
      </GridPane>
   </children>
