<AnchorPane prefHeight="480.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ConfigureDispensersController">
   <VBox>
      <children>
         <fx:include source="menu.fxml" />
         <GridPane prefHeight="455.0" prefWidth="800.0">

            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" prefWidth="400.0" />
               <ColumnConstraints hgrow="SOMETIMES" prefWidth="380.0" />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="335.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
                <RowConstraints />
            </rowConstraints>

            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
               <TableView fx:id="dispensers_table" prefHeight="200.0" prefWidth="760.0" GridPane.columnSpan="2" GridPane.rowSpan="1" GridPane.rowIndex="0">
                  <columns>
                     <TableColumn fx:id="id_column" prefWidth="100.0" style="-fx-alignment: CENTER;" text="ID" />
                     <TableColumn fx:id="ingredients_column" prefWidth="580.0" text="Ingredient" />
                     <TableColumn fx:id="enabled_column" prefWidth="80.0" text="Enabled" />
                  </columns></TableView>
               <HBox spacing="20.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                  <TextField fx:id="selectedDispenserId_field" editable="false" maxWidth="50.0" promptText="ID" />
                  <ComboBox fx:id="selectedDispenserIngredient_box" minWidth="300.0" promptText="Ingredient" />
                  <CheckBox fx:id="selectedDispenserEnabled_check" text="Enabled" minHeight="31.0" minWidth="31.0" />
                  <Button fx:id="save_button" minWidth="100" text="Save">
                     <HBox.margin>
                        <Insets left="100.0" />
                     </HBox.margin></Button>
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <GridPane.margin>
                     <Insets />
                  </GridPane.margin>
                  <padding>
                     <Insets bottom="20.0" right="20.0" top="20.0" />
                  </padding>
               </HBox>
            </children>

         </GridPane>
      </children>
   </VBox>
</AnchorPane>
