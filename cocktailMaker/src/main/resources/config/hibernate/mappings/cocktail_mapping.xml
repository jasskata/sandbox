<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="server.db.objects.Cocktail" table="COCKTAILS">
    <id name="id" type="int" column="ID">
     <generator class="identity" />
    </id>
    <property name="name" type="string" column="NAME" not-null="true" />
    <many-to-one name="cocktailGroup" column="GROUP_ID"
                 class="server.db.objects.CocktailGroup" not-null="true" />
    <set name="ingredients" table="COCKTAILS_INGREDIENTS">
        <key column="COCKTAIL_ID" />
        <one-to-many class="server.db.objects.Cocktail_Ingredient" />
    </set>
</class>
</hibernate-mapping>